<div class="container">
    <div class="row">

        <div class="col-md-6" style="text-align:center;">
            <!-- <img src="/<%=resumeRecord.resumeName%>" height="500" width="350"> -->
            <div class="tiles">
                <img  data-toggle="modal" data-target="#myModal" class="tileind" data-scale="2.4" src="<%=resumeRecord.resumeName%>">
            </div>
            <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-body">
                          <button data-dismiss="modal" class="close">Ã—</button>
                          <img src="<%=resumeRecord.resumeName%>" class="img-responsive">
                      </div>
                  </div>
                </div>
              </div>


            <div class="row displayLikes">
              <h3>Your votes</h3>

              <div class="col-md-6">
                <h3>Likes: <%=resumeRecord.upvoteCount%></h3>
              </div>
              <div class="col-md-6">
                <h3>Dislike: <%=resumeRecord.downvoteCount%></h3>
              </div>
            </div>
                  <div class="row">
                    <div class="col-md-12">
                    <!-- COMMENT FORM BOX -->
                    <form method = "post" action = '/accounts' role = 'form'>
                        <textarea maxlength="250" type = 'text' class="form-control" rows="3" name="Message" id="Message" placeholder="Message" required onsubmit="triggerButton()"></textarea>
                        <h6 class="pull-right" id="count_message"></h6><h6 class="pull-right" id="countLeft">Characters remaining :</h6>

                        <div class="row">
                            <div class="col-md-12">
                                <!-- POSTCOMMENT BUTTON -->
                                <input type="submit" id="postIt" class="btn main-btn" value = "Comment"/>
                            </div> <!--END OF class = "col-md-12" DIV TAG -->
                        </div> <!-- END OF class = "row" DIV TAG -->
                    </form>
                    <!-- <iframe id = "uploader_iframe" name = "uploader_iframe" style = "display: none;"></iframe> -->
                  </div>
                </div> <!--END OF class = "col-md-12" DIV TAG -->
              </div>

              <div class="col-md-6" id="commentsWrapper">
                  <div class="row">
                      <div class="col-md-8">
                          <div class="page-header">
                              <h1><small id="commentCount" class="pull-right"></small><%=resumeRecord.commentCount%> Comments </h1>
                          </div>
                          <div class="comments-list">
                              <!-- for loop  -->
                              <%resumeRecord.comments.forEach(function(comment){ %>
                              <div class="media">
                                  <div class="media-body">
                                      <h4 style="display:inline;" class="media-heading user_name"><%=comment.username%></h4>
                                      <span class="text-muted">
                                        <%=new Date(comment.created).toDateString();%> <%=new Date(comment.created).getHours()%>:<%=(new Date(comment.created).getMinutes()<10?'0':'') + new Date(comment.created).getMinutes();%><!-- This for you shally! -->

                                      </span>
                                      <p class="break-word"><%=comment.content%></p>
                                  </div>
                              </div>
                              <%})%>
                          </div>
                      </div>
                  </div>
              </div>


            </div> <!-- END OF class = "row" DIV TAG -->

            <!-- <button type="button" class="pull-left" onclick="">Update Resume</button><br><br><br> -->
        </div>

		<aside>



    </div>
</div>

</body>
