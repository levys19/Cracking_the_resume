<div class="container">

    <!-- <div class="row">
      <button type="button" class="btn btn-default navbar-btn pull-left">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </button> -->
        <div class="col-md-6" style="text-align:center;">
            <!-- <img src="/<%=resumeRecord.resumeName%>" height="500" width="350"> -->
            <div class="tiles">
                <img data-toggle="modal" data-target="#myModal" class="tileind" data-scale="2.4" src="<%=resumeRecord.resumeName%>" data-elem="pinchzoomer">
            </div>

            <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-body">
                          <button data-dismiss="modal" class="close">Ã—</button>
                          <img src="<%=resumeRecord.resumeName%>" class="img-responsive">
                      </div>
                  </div>
                </div>
              </div>
            <!-- RESUME IMAGE  -->

            <div class="row displayLikes" style="display:none;">
              <h3>You have already voted</h3>
              <div class="col-md-6">
                <h3>Likes: <%=resumeRecord.upvoteCount%></h3>
              </div>
              <div class="col-md-6">
                <h3>Dislike: <%=resumeRecord.downvoteCount%></h3>
              </div>
            </div>

            <div class="row likeButtons">
              <h3>What do you think of this resume?</h3>
                <div class="col-md-6">
                    <!-- NEW LIKE BUTTON -->
                    <form class = 'upvote' action="/individual/<%=resumeRecord._id%>/upvote" method = "POST">
                        <button class="like">Like
                         <input class="qty1" name="qty1" readonly="readonly"
                        <%resumeRecord.upvotes.forEach(function(f){ %>
                            <%if(String(f.votedBy) === String(user._id)){ %>
                                id = "<%=f.status%>"
                            <%}%>
                        <%}); %>
                        />
                        </button>
                    </form>
                  </div>
                  <div class="col-md-6">
                    <!-- NEW DISLIKE BUTTON -->
                    <form class = 'downvote' action="/individual/<%=resumeRecord._id%>/downvote" method = "POST">
                         <button class="dislike"><i class="fa fa-thumbs-o-up"></i>
                        Dislike <input class="qty2" name="qty2" readonly="readonly"
                        <%resumeRecord.downvotes.forEach(function(f){ %>
                            <%if(String(f.votedBy) === String(user._id)){ %>
                                id = "<%=f.status%>"
                            <%}%>
                        <%}); %>
                        />
                        </button>
                    </form>
                  </div>
                </div>
                  <div class="row">
                    <div class="col-md-12">
                    <!-- COMMENT FORM BOX -->
                    <form method = "post" action = '/individual/<%=resumeRecord._id%>/comment' role = 'form'>
                        <textarea maxlength="500" type = 'text' class="form-control" rows="3" name="Message" id="Message" placeholder="Message" required onsubmit="triggerButton()"></textarea>
                        <h6 class="pull-right" id="count_message"></h6><h6 class="pull-left" id="countLeft"></h6>
                        <div class="row">
                            <div class="col-md-12">
                                <!-- POSTCOMMENT BUTTON -->
                                <input type="submit" id="postIt" class="btn main-btn" value = "Comment"/>
                            </div> <!--END OF class = "col-md-12" DIV TAG -->
                        </div> <!-- END OF class = "row" DIV TAG -->
                    </form>
                    <!-- <iframe id = "uploader_iframe" name = "uploader_iframe" style = "display: none;"></iframe> -->
                  </div>
                </div> <!--END OF class = "col-md-12" DIV TAG -->
              </div>

              <div class="col-md-6" id="commentsWrapper">
                  <div class="row">
                      <div class="col-md-8">
                          <div class="page-header">
                              <h1><small id="commentCount" class="pull-right"></small><%=resumeRecord.commentCount%> Comments </h1>
                          </div>
                          <div class="comments-list">
                              <!-- for loop  -->
                              <%resumeRecord.comments.forEach(function(comment){ %>
                              <div class="media">
                                  <div class="media-body">
                                      <h4 style="display:inline;" class="media-heading user_name"><%=comment.username%></h4>
                                      <span class="text-muted">
                                        <%=new Date(comment.created).toDateString();%> <%=new Date(comment.created).getHours()%>:<%=(new Date(comment.created).getMinutes()<10?'0':'') + new Date(comment.created).getMinutes();%>
                                      </span>
                                      <p><%=comment.content%></p>
                                  </div>
                              </div>
                              <%})%>
                          </div>
                      </div>
                  </div>
              </div>


            </div> <!-- END OF class = "row" DIV TAG -->



            <!-- <button type="button" class="pull-left" onclick="">Update Resume</button><br><br><br> -->
        </div>



    </div>
</div>

</body>
</html>
